{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run PEARL Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/client/**/*.js",
        "${workspaceFolder}/server/**/*.js"
      ]
    }
  ]
}

